<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <size android:width="60dp"
                android:height="60dp"/>
            <stroke
                android:width="1dp"
                android:color="#E0823C"/>
            <corners
                android:radius="10dp"/>

            <solid
                android:color="#FAC2A6"/>
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <size android:width="60dp"
                android:height="60dp"/>
            <stroke
                android:width="1dp"
                android:color="#E0823C"/>
            <corners
                android:radius="10dp"/>
        </shape>
    </item>
</selector>